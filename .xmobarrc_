Config { font = "xft:Noto Sans Mono CJK JP Regular:pixelsize=10"
       , borderColor = "black"
       , border = NoBorder
       , bgColor = "#002b36"
       , fgColor = "#657b83"
       , position = BottomSize C 100 15
       , lowerOnStart = True
       , commands = [ Run Network "wlan0" ["-w", "4", "-L","0","-H","32","--normal","green","--high","red", "-t", "D<rx> U<tx>"] 10
                    , Run Wireless "wlan0" [] 6000
                    , Run DiskU [("/", "<used>/<size>")] [] 6000
                    , Run DiskIO [("/", "R <read> W <write>")] ["-w", "5"] 10
                    , Run PipeReader "/tmp/markw-xmms2-string-ipc-pipe" "xmms2_curr"
                    , Run PipeReader "/tmp/markw-xmobar-vol-ipc-pipe" "xmobar_vol"
                    , Run Cpu ["-p", "3", "-L","8","-H","50","-l", "gray30", "--high","red"] 10
                    , Run Memory ["-p", "3", "-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%xmms2_curr%}%cpu% <fc=#c0c0c0>::</fc> %memory% %swap% <fc=#c0c0c0>::</fc> Net: %wlan0wi% <fc=#c0c0c0>(</fc>%wlan0%<fc=#c0c0c0>)</fc> <fc=#c0c0c0>::</fc> Disk: %disku% %diskio% {%xmobar_vol%"
       }
