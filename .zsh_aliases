vfn () {
    opts=$(find -name $1)
    IFS=$'\n'
    select opt in "$opts" ; do
        if [ $opt ] ; then
            echo $EDITOR $opt 
            $EDITOR $opt 
        else
            break
        fi
    done
}

gp ()
{
    br=$(git rev-parse --abbrev-ref HEAD)
    git push -u origin $br "$@"
}
