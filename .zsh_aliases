alias gpdn='zsh_precmd_skip_git_diff+=$(findgit)'

gpdy () {
    gitdir="$(findgit)"
    zsh_precmd_skip_git_diff[$zsh_precmd_skip_git_diff[(i)$gitdir]]=()
}

findgit () {
    local levels=1
    dir="$PWD"
    while [ "/" != "$dir" ] ; do
        if [ -d "$dir/.git" ] ; then
            echo "$dir"
            return
        fi
        dir=${dir%/*}
    done
}

vfn () {
    opts="$(find -name $1)"
    if [ "$(echo "$opts" | wc -l)" -eq 1 ] ; then
        $EDITOR "$opts"
    else
        IFS=$'\n'
        select opt in $(echo "${opts}") ; do
            if [ $opt ] ; then
                echo $EDITOR $opt
                $EDITOR $opt
                break
            else
                break
            fi
        done
    fi
}

